{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block stylesheets %}
 {{ parent() }}
   <link rel="stylesheet" href="{{ asset('css/show_contact.css') }}" type="text/css" />
   <link href="https://fonts.googleapis.com/css?family=Raleway:500&display=swap" rel="stylesheet">
{% endblock %}
{% block body %}
    <div class="container-fluid body-container pr-0 pl-0">
      <div class="row">
        <div class="col-lg-12">
           <div class="row">
             <div class="col-lg-8 offset-lg-2">
                <div class="title-table">
                   <h4>Show Contact</h4>
                </div>
                <div class="table-fixed-content">
                   <table class="table table-striped">
                     <tbody>
                       <tr>
                         <th>Id</th>
                            <td>{{ contact.id }}</td>
                         </tr>
                         <tr>
                           <th>Prenom</th>
                           <td>{{ contact.firstname }}</td>
                         </tr>
                         <tr>
                           <th>Nom</th>
                           <td>{{ contact.lastname }}</td>
                        </tr>
                        <tr>
                           <th>Email</th>
                           <td>{{ contact.email }}</td>
                        </tr>
                        <tr>
                           <th>Telephone</th>
                           <td>{{ contact.phoneNumber }}</td>
                        </tr>
                     </tbody>
                   </table>
                </div>
             </div>
           </div>
           <div class="row">
             <div class="col-lg-2 offset-lg-2">
               <div class="back-to-list">
                 <a href="{{ path('contact_index') }}">Back to list</a>
              </div>
            </div>
          </div>
        </div>
      </div>
{% endblock %}
