<link href="https://fonts.googleapis.com/css?family=Raleway:500&display=swap" rel="stylesheet">
<section id="container-new-content">
  <div id="new-content-form">
    <div class="new-content-title">
      <h2>Create new contact</h2>
    </div>
      <div class="container">
        <div class="row">
          <div class="col-md-6 mx-auto">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}} ) }}
                <div class="form-group"> {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'Prenom'}}) }}</div>
                <div class="form-group"> {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}</div>
                <div class="form-group"> {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}</div>
                <div class="form-group"> {{ form_row(form.phoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Telephone'}}) }}</div>
               <div class="form-group">{{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}</div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>   
</section>